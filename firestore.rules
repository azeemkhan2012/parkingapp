rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner() {
      return request.auth.uid == resource.data.user_id;
    }
    
    // Helper function to check if user is setting their own user_id on create
    function isCreatingOwn() {
      return request.auth.uid == request.resource.data.user_id;
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Usernames collection - read for all authenticated users, write only for own username
    match /usernames/{username} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (resource == null || isOwner());
    }
    
    // Parking spots collection - read for all authenticated users
    match /parking_spots/{spotId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Bookings collection - users can read/write their own bookings
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (resource == null || isOwner());
      allow create: if isAuthenticated() && isCreatingOwn();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // Saved spots collection - users can read/write their own saved spots
    match /saved_spots/{savedSpotId} {
      // Helper function to check if user owns the saved spot
      function isSavedSpotOwner() {
        return request.auth.uid == resource.data.user_id;
      }
      
      // Helper function to check if user is creating their own saved spot
      function isCreatingOwnSavedSpot() {
        return request.auth.uid == request.resource.data.user_id;
      }
      
      // Allow read if user is authenticated and owns the document
      // This works for both individual document reads and queries
      allow read: if isAuthenticated() && (resource == null || isSavedSpotOwner());
      
      // Allow create if user is authenticated and sets their own user_id
      allow create: if isAuthenticated() && isCreatingOwnSavedSpot();
      
      // Allow update/delete if user is authenticated and owns the document
      allow update, delete: if isAuthenticated() && isSavedSpotOwner();
    }
    
    // User tokens collection - users can read/write their own FCM tokens
    match /user_tokens/{userId} {
      // Allow read if user is authenticated and owns the token
      allow read: if isAuthenticated() && (resource == null || request.auth.uid == userId);
      
      // Allow create/update if user is authenticated and setting their own token
      allow create, update: if isAuthenticated() && request.auth.uid == userId && request.auth.uid == request.resource.data.user_id;
      
      // Allow delete if user is authenticated and owns the token
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Notifications collection - users can read/update their own notifications
    // Cloud Functions can write notifications
    match /notifications/{notificationId} {
      // Allow read if user is authenticated and owns the notification
      allow read: if isAuthenticated() && (resource == null || request.auth.uid == resource.data.user_id);
      
      // Allow update if user is authenticated and owns the notification (for marking as read)
      allow update: if isAuthenticated() && request.auth.uid == resource.data.user_id;
      
      // Cloud Functions can create notifications (no auth check needed for server-side)
      allow create: if true;
    }
    
    // Payments collection - users can read and update their own payments
    match /payments/{paymentId} {
      // Helper function to check if user owns the payment
      function isPaymentOwner() {
        return request.auth.uid == resource.data.user_id;
      }
      
      // Helper function to check if user is creating their own payment
      function isCreatingOwnPayment() {
        return request.auth.uid == request.resource.data.user_id;
      }
      
      // Helper function to check if user is updating their own payment
      function isUpdatingOwnPayment() {
        return request.auth.uid == resource.data.user_id &&
               request.auth.uid == request.resource.data.user_id;
      }
      
      // Allow read if user is authenticated and owns the payment
      // Note: For queries, we need to allow reads if the user_id matches
      // The query will filter results, so we allow read if authenticated
      allow read: if isAuthenticated() && (resource == null || isPaymentOwner());
      
      // Allow list queries for authenticated users (they can only see their own payments due to query filters)
      allow list: if isAuthenticated();
      
      // Allow create if user is authenticated and sets their own user_id (for client-side creation before checkout)
      allow create: if isAuthenticated() && isCreatingOwnPayment();
      
      // Allow update if user is authenticated and updating their own payment
      allow update: if isAuthenticated() && isUpdatingOwnPayment();
    }
    
    // Reviews collection - users can create reviews and read all reviews for a spot
    match /reviews/{reviewId} {
      // Helper function to check if user owns the review
      function isReviewOwner() {
        return request.auth.uid == resource.data.user_id;
      }
      
      // Helper function to check if user is creating their own review
      function isCreatingOwnReview() {
        return request.auth.uid == request.resource.data.user_id;
      }
      
      // Allow read for all authenticated users (to view reviews for parking spots)
      allow read: if isAuthenticated();
      
      // Allow create if user is authenticated and sets their own user_id
      // Also validate that rating is between 1-5 and spot_id is provided
      allow create: if isAuthenticated() 
        && isCreatingOwnReview()
        && request.resource.data.spot_id != null
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5;
      
      // Allow update/delete if user is authenticated and owns the review
      allow update, delete: if isAuthenticated() && isReviewOwner();
    }
    
    // Parking reports collection - for audit trail of user reports
    match /parking_reports/{reportId} {
      // Allow read if user is authenticated and owns the report
      allow read: if isAuthenticated() && (resource == null || request.auth.uid == resource.data.user_id);
      
      // Allow create if user is authenticated and sets their own user_id
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.user_id;
    }
  }
}

